# Force LF line endings for shell scripts
*.sh text eol=lf
# Force LF for Python scripts
*.py text eol=lf
# Binary files
*.wav binary
*.png binary
*.jpg binary
*.pdf binary
# Git LFS tracking for large files
# Audio files
*.wav filter=lfs diff=lfs merge=lfs -text
*.aiff filter=lfs diff=lfs merge=lfs -text
*.mp3 filter=lfs diff=lfs merge=lfs -text
*.flac filter=lfs diff=lfs merge=lfs -text
*.ogg filter=lfs diff=lfs merge=lfs -text
# Images
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.gif filter=lfs diff=lfs merge=lfs -text
# Binary files
*.pdf filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.tar.gz filter=lfs diff=lfs merge=lfs -text
# Test executables (optional - these are usually built locally)
test_* filter=lfs diff=lfs merge=lfs -text
*_test filter=lfs diff=lfs merge=lfs -text
golden/*.wav filter=lfs diff=lfs merge=lfs -text
fixtures/*.wav filter=lfs diff=lfs merge=lfs -text
